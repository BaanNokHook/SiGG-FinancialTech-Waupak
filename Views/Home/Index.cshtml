                        <li role="presentation" class="active">
                            <a href="@Url.Action("Add", "RPDealEntry")" ata-toggle="tooltip" data-placement="bottom" title="click to add deal" style="cursor: pointer;">
                                @if (Model.Datas.Select(x => x.remaining).Sum() > 0)
                                {
                                    <span class="label-remain">@Model.Datas.Select(x => x.remaining).Sum().ToString() </span>
                                }
                                Transaction
                            </a>
                        </li>
                    </ul>
                </div>
                <div class="tab-content dashboard-content">
                    <div id="transaction" class="box-content have-nav tab-pane in active">
                        @*<div class="group box-header-wrapper">
                                <div class="box-header mb-25">
                                </div>
                            </div>*@
