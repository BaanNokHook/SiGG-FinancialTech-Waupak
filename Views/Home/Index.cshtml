                                        </div>
                                    </div>
                                </div>*@
                            <div class="row">
                                <div class="daily-task-list">
                                    <ul>
                                        @foreach (var item in Model.Datas)
                                        {
                                            if (@item.remaining + item.complete > 0)
                                            {
                                                <li>
                                                    <a class="task-box-wrapper @(item.remaining == 0 && item.complete > 0 ? "completed":"" ) clearfix" @(item.remaining == 0 && item.complete > 0 ? "" : "href=../" + @item.task_link)>
                                                        <div class="task-box">
                                                            <div class="left-item">
                                                                <span class="name">@item.task_name</span>
                                                                <div class="progress slim">
                                                                    <div class="progress-bar" role="progressbar" aria-valuenow="100"
