@section Scripts {
    @Scripts.Render("~/bundles/datatable")
    <script>
        $(document).ready(function () {
            taskListResponsive();
        });

        function taskListResponsive() {
            var containerWidth = $('.daily-task-list').width();
            var boxWidth = $('.daily-task-list > ul > li');
            if (containerWidth >= 1205) {
                boxWidth.css('width', '33.33%');
            }
            else if (containerWidth >= 807 && containerWidth <= 1204) {
                boxWidth.css('width', '50%');
            }
            else {
                boxWidth.css('width', '100%');
            }
        }
    </script>
}