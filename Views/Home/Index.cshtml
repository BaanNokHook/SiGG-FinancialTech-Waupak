@model GM.Data.View.UserAndScreen.RoleTaskViewModel

@{
    ViewBag.Title = "Home Page";
    Layout = "~/Views/Shared/MainLayout.cshtml";
}

<section class="working-content">
    <div class="container-fluid container-fixed">
        <!-- PageTitle -->
        <div class="row row-fixed">
            <div class="col-lg-12 col-fixed">
                <div class="page-title">
                    <div class="breadcrumb-wrap">
                        <ol class="breadcrumb">
                            <li>
                                <a href="#">Home</a>
                            </li>
                            <li class="active">Daily Task List</li>
                        </ol>
                    </div>
                    <div class="title">
                        <h1>
                            @*@User.RoleName*@
                        </h1>
                    </div>
                </div>
            </div>
        </div>
        <!-- Content Zone -->
        <div class="row row-fixed">
            <div class="col-xs-12 col-fixed">
                <div class="box-content">
                    <div class="box-header">
                        <div class="left-item">
                            <div class="title">
                                <h3>Over all</h3>
                            </div>
                        </div>
                    </div>
                    <div class="box-header">
                        <div class="left-item">
                            <div class="title">
                                <span style="color: #344961;font-weight: bold;text-overflow: ellipsis;overflow: hidden;white-space: nowrap;display: block;">FO Summary</span>
                            </div>
                        </div>
                    </div>
                    <div class="content-container">

                        <div class="task-stat-group">
                            <div class="task-stat remain hr-right">
                                <span>Remaining</span>
                                <span class="number">@Model.FO_REMAINING_JOB</span>
                            </div>
                            <div class="task-stat completed hr-right">
                                <span>Completed</span>
                                <span class="number">@Model.FO_COMPLETE_JOB</span>
                            </div>
                            <div class="task-stat">
                                <span>Total</span>
                                <span class="number">@(Model.FO_REMAINING_JOB + Model.FO_COMPLETE_JOB)</span>
                            </div>
                        </div>

                        @if (Model.Datas.Count > 0 && (Model.FO_REMAINING_JOB > 0 || Model.FO_COMPLETE_JOB > 0))
                        {
                            <div class="overall-progress" style="margin-left: 350px;">
                                <span class="text-progress">@(Convert.ToDecimal((Convert.ToDecimal(Model.FO_COMPLETE_JOB) / Convert.ToDecimal(Model.FO_COMPLETE_JOB + Model.FO_REMAINING_JOB)) * 100).ToString("N2")) % Completed</span>
                                <div class="progress slim">
                                    <div class="progress-bar" role="progressbar" aria-valuenow="70"
                                         aria-valuemin="0" aria-valuemax="100" style="width:@(Convert.ToDecimal((Convert.ToDecimal(Model.FO_COMPLETE_JOB) / Convert.ToDecimal(Model.FO_COMPLETE_JOB + Model.FO_REMAINING_JOB))* 100).ToString("N2"))%">
                                        <span class="sr-only">@(Convert.ToDecimal((Convert.ToDecimal(Model.FO_COMPLETE_JOB) / Convert.ToDecimal(Model.FO_COMPLETE_JOB + Model.FO_REMAINING_JOB)) * 100).ToString("N2"))% Complete</span>
                                    </div>
                                </div>
                            </div>
                        }
                        else
                        {
                            <div class="overall-progress" style="margin-left: 350px;">
                                <span class="text-progress">No Job</span>
                                <div class="progress slim">
                                    <div class="progress-bar" role="progressbar" aria-valuenow="70"
                                         aria-valuemin="0" aria-valuemax="100" style="width:0%">
                                        <span class="sr-only">No Job</span>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
