                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <hr>
                            </div>
                            <div class="row">
                                <div class="col-xs-12">
                                    <button class="btn btn-primary btn-round btn-main btn-search" type="submit">Confirm</button>
                                    <button class="btn btn-link btn-link-secondary" type="reset">Clear Data</button>
                                </div>
                            </div>
                        </div>
                    }
                </div>
                <!-- End Div Search -->
                <!-- Start Div Detail -->
                <div class="box-content table-content">
                    <div class="group box-header-wrapper">
                        <div class="box-header">
                            <div class="left-item">
                                <div class="title">
                                    <h3>Details</h3>
                                </div>
                            </div>
                            <div class="right-item">
                                <div class="add-data">
                                    <!-- <button class="btn btn-primary btn-round" type="button" data-toggle="modal" data-target="#edit-modal">
                                      + Add User
                                    </button> -->
                                    <div class="dropdown">
                                        @if (IsCreate || IsUpdate || IsDelete)
                                        {
                                            <button class="btn btn-excel btn-round" type="button" aria-haspopup="true" aria-expanded="true" style="font-weight: bold;" onclick="GM.User.ExportUser(this)">
                                                Export User <i> </i>
                                                <i class="feather-icon icon-download"></i>
                                            </button>
                                        }

                                        <button class="btn btn-primary btn-round dropdown-toggle" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true" @(!IsCreate ? "disabled" : "")>
                                            + Add User
                                            <span class="caret"></span>
                                        </button>
                                        <ul class="dropdown-menu">
                                            @*<li>
                                                    <a data-toggle="modal" data-target="#add-local-user-modal">
                                                        + Add Local User
                                                    </a>
                                                </li>
                                                <li>
                                                    <a data-toggle="modal" data-target="#add-ldap-user-modal">
                                                        + Add LDAP User
                                                    </a>
                                                </li>*@
                                            <li>
                                                <a formaction="add" formtype="false" onclick="GM.User.Form(this)">
                                                    + Add Local User
                                                </a>
                                            </li>
                                            <li>
                                                <a formaction="add" formtype="true" onclick="GM.User.Form(this)">
                                                    + Add LDAP User
                                                </a>
                                            </li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="box-header delete-item hide">
                            <div class="left-item">
                                <div class="static-text">
                                    <span>1 item(s) selected</span>
                                </div>
                                <div class="option">

                                    <button class="btn btn-delete btn-round" type="button" data-toggle="modal" data-target="#confirm-delete">
                                        Delete
                                    </button>
                                </div>
                                <div class="option">
                                    <button class="btn btn-link btn-link-secondary" type="button">
                                        Cancel
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="outer-table-wrapper">
                        <table id="x-table-data" class="table table-striped display nowrap" cellspacing="0" width="100%">
                            <thead>
                                <tr>
                                    <th>@Html.LabelFor(mode => mode.SearchForm.RowNumber)</th>
                                    <th>@Html.LabelFor(mode => mode.SearchForm.user_id)</th>
                                    <th>@Html.LabelFor(mode => mode.SearchForm.user_eng_name)</th>
                                    <th>@Html.LabelFor(mode => mode.SearchForm.ldap_user_flag)</th>
                                    <th>@Html.LabelFor(mode => mode.SearchForm.role_id)</th>
                                    <th>@Html.LabelFor(mode => mode.SearchForm.role_name)</th>
                                    <th>@Html.LabelFor(mode => mode.SearchForm.title_master_id)</th>
                                    <th>@Html.LabelFor(mode => mode.SearchForm.title_master_name)</th>
                                    <th>@Html.LabelFor(mode => mode.SearchForm.desk_group_id)</th>
                                    <th>@Html.LabelFor(mode => mode.SearchForm.desk_group_name)</th>
                                    <th>@Html.LabelFor(mode => mode.SearchForm.trader_id)</th>
                                    <th>@Html.LabelFor(mode => mode.SearchForm.costcenter_code)</th>
                                    <th class="action" style="text-align:center;">
                                        <i class="feather-icon icon-settings" style="font-size: large;"></i>
                                    </th>
                                </tr>
                            </thead>
                        </table>
                    </div>
                </div>
                <!-- End Div Detail -->
            </div>
        </div>
    </div>
</section>

