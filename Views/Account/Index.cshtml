                                                @Html.DropDownListFor(model => model.SearchForm.ldap_user_flag, (SelectList)ViewBag.UserTypes, "- Select All -", new { @class = "form-control" })
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            @Html.LabelFor(mode => Model.SearchForm.title_master_id, htmlAttributes: new { @class = "control-label col-xs-2" })
