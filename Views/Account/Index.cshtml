                                                        @Html.SpanFor(model => Model.SearchForm.desk_group_name, "Select...", new { @class = "selected-data" })
                                                        @Html.TextBoxFor(model => Model.SearchForm.desk_group_id, htmlAttributes: new { @class = "selected-value hidden" })
                                                        @Html.TextBoxFor(model => Model.SearchForm.desk_group_name, htmlAttributes: new { @class = "selected-data hidden" })
