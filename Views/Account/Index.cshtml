                                                <div class="dropdown">
                                                    <button class="btn btn-default dropdown-toggle" id="ddl_traderid" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
                                                        @Html.SpanFor(model => Model.SearchForm.trader_id_text, "Select...", new { @class = "selected-data" })
                                                        @Html.TextBoxFor(model => Model.SearchForm.trader_id, htmlAttributes: new { @class = "selected-value hidden" })
                                                        @Html.TextBoxFor(model => Model.SearchForm.trader_id_text, htmlAttributes: new { @class = "selected-data hidden" })
                                                        <span class="caret"></span>
                                                    </button>
                                                    <div class="dropdown-menu">
                                                        <div class="search-dropdown-menu">
                                                            <input type="text" data-action="@Url.Action("FillTraderId", (string)this.ViewContext.RouteData.Values["controller"])" id="txt_traderid" class="form-control" placeholder="Search..." aria-describedby="basic-addon1">
                                                            <i class="feather-icon icon-search"></i>
                                                        </div>
                                                        <hr>
                                                        <ul id="ul_traderid"></ul>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </row>
                                    <div class="advance-form" style="display: none;">
                                        <div class="form-group">
                                            @Html.LabelFor(mode => Model.SearchForm.role_id, htmlAttributes: new { @class = "control-label col-xs-2" })
                                            <div class="col-xs-4">
                                                <div class="dropdown">
                                                    <button class="btn btn-default dropdown-toggle" id="ddl_role" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
                                                        @Html.SpanFor(model => Model.SearchForm.role_name, "Select...", new { @class = "selected-data" })
                                                        @Html.TextBoxFor(model => Model.SearchForm.role_id, htmlAttributes: new { @class = "selected-value hidden" })
                                                        @Html.TextBoxFor(model => Model.SearchForm.role_name, htmlAttributes: new { @class = "selected-data hidden" })
