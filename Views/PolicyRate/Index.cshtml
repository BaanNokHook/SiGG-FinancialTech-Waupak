                            $("#action-form").attr("isdelete", "true");
                            $("#action-form").attr("action", "@Url.Action("Delete", "PolicyRate")");
                            $("#action-form").attr("keyvalue", key);
                            $("#action-form").attr("keyvalue2", keysecond);

