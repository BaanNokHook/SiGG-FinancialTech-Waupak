                                                    <span class="feather-icon icon-calendar"></span>
                                                </span>
                                            </div>
                                        </div>
                                        @Html.LabelFor(model => model.FormSearch.cost_of_fund_date, htmlAttributes: new { @class = "control-label col-xs-2" })
                                        <div class="col-xs-4">
                                            <div class="input-group date">
                                                @Html.EditDateFor(model => model.FormSearch.cost_of_fund_date, new { @class = "form-control date-time-picker" })
