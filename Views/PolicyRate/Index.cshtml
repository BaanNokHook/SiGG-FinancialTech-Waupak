                                    @Html.LabelForRequired(model => model.FormAction.cost_of_fund_date, htmlAttributes: new { @class = "control-label col-xs-4" })
                                    <div class="col-xs-6">
                                        <div class="input-group date">
                                            @Html.EditDateFor(model => model.FormAction.cost_of_fund_date, new { @class = "form-control date-time-picker", @typefield = "date" })
                                            <span class="input-group-addon">
                                                <span class="feather-icon icon-calendar"></span>
                                            </span>
                                        </div>
                                        <span id="cost_of_fund_date_error" class="field-validation-error text-danger" data-valmsg-replace="true"></span>
                                    </div>
                                </div>
                                <div class="form-group">
                                    @Html.LabelForRequired(model => model.FormAction.cost_of_fund_rate, htmlAttributes: new { @class = "control-label col-xs-4" })
                                    <div class="col-xs-6">
                                        @Html.EditorFor(model => model.FormAction.cost_of_fund_rate, new { htmlAttributes = new { @maxlength = 12,@class = "form-control", @oninput = "return numberOnlyAndDot(this);", @onfocusout = "return auto8digit(this);"} })
