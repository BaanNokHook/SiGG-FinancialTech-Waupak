                    }
                }
            };

            GM.PolicyRate.Get = function (op) {
                $.get("@Url.Action("Edit", (string)this.ViewContext.RouteData.Values["controller"])", { policy_date: op.id, cur: op.id1, t: GM.Time })
                .done(function (response, status, jqxhr) {
                    // this is the "success" callback
                    if (response.RowNumber == null) {
                        swal("Warning", "Record have been remove!", "warning");
                        GM.PolicyRate.Form.Search();
                        op.handler(response);
                    }
                    else {
                        $('#action-form-modal').modal('show');
                        GM.PolicyRate.Form.DataBinding({ form: op.form, data: response });
                        op.handler(response);
                    }
                    
                })
                .fail(function (jqxhr, status, error) {
              });
            };
            $("#NavBar").html($('#NavPolicyRate').val());
        });
        // End (document).ready
    </script>
    @Scripts.Render("~/module/policyrate")
    @Scripts.Render("~/module/validation")
}
