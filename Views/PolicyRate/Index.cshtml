                                    <th>@Html.LabelFor(mode => mode.TableList.policy_date)</th>
                                    <th>@Html.LabelFor(mode => mode.TableList.cur)</th>
                                    <th>@Html.LabelFor(mode => mode.TableList.cost_of_fund_date)</th>
